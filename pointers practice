#include<bits/stdc++.h>

using namespace std;

void swap(int *a,int *b){
	int temp=*a;
	*a=*b;
	*b=temp;
}

int main(){
	
	int num=4;
	int *ptr;
	
	ptr=&num;
	
/*	cout<<"num"<<num<<endl; //4
	cout<<"&num"<<&num<<endl; //add of num
	cout<<"ptr"<<ptr<<endl;  //add of num
	cout<<"*ptr"<<*ptr<<endl; //value
	*/
	
//	for swaping number
	int a=2;
	int b=4;
	
	int *ptra=&a;
	int *ptrb=&b;
	
	swap(ptra,ptrb);
	cout<<a<<b;
	return 0;
}
